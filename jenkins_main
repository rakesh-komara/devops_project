pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'jenkins_main', url: 'https://github.com/rakesh-komara/devops_project.git'
            }
        }

        stage('Build Project') {
            steps {
                sh 'cd <jenkins_main> && ./build.sh'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'cd <jenkins_main> && ./test.sh'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/*.log', allowEmptyArchive: true
        }
        success {
            echo '✅ Build and tests completed successfully!'
        }
        failure {
            echo '❌ Build or tests failed!'
        }
    }
}
