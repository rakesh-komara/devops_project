pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'jenkins_main', url: 'https://github.com/yourname/yourrepo.git'
            }
        }

        stage('Build Project') {
            steps {
                echo '🔨 Building project...'
                sh 'echo "Build successful!" > build.log'
            }
        }

        stage('Run Tests') {
            steps {
                echo '🧪 Running tests...'
                sh 'echo "All tests passed!" >> build.log'
            }
        }
    }

    post {
        always {
            echo '📦 Archiving logs...'
            archiveArtifacts artifacts: '**/*.log'
        }
        success {
            echo '✅ Build completed successfully!'
        }
        failure {
            echo '❌ Build or tests failed!'
        }
    }
}

