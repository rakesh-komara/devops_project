pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'jenkins_main', url: 'https://github.com/yourname/yourrepo.git'
            }
        }

        stage('Build Project') {
            steps {
                echo 'ğŸ”¨ Building project...'
                sh 'echo "Build successful!" > build.log'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'echo "All tests passed!" >> build.log'
            }
        }
    }

    post {
        always {
            echo 'ğŸ“¦ Archiving logs...'
            archiveArtifacts artifacts: '**/*.log'
        }
        success {
            echo 'âœ… Build completed successfully!'
        }
        failure {
            echo 'âŒ Build or tests failed!'
        }
    }
}

